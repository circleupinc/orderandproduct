<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order.PaymentStatus">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/white"
            app:titleTextColor="@color/black"
            app:title="Payment status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/appbar"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox

                app:buttonTint="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </com.google.android.material.checkbox.MaterialCheckBox>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Awaiting payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <TextView
                    android:text="No funds receive - you need to arrange the payment with the customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>


                <View
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox

                app:buttonTint="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </com.google.android.material.checkbox.MaterialCheckBox>

            <LinearLayout

                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <TextView
                    android:text="The payment for the order is received in full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>


                <View
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox

                app:buttonTint="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </com.google.android.material.checkbox.MaterialCheckBox>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Cancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <TextView
                    android:text="The order is cancelled or your payment gateway has failed to charge the customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>


                <View
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox

                app:buttonTint="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </com.google.android.material.checkbox.MaterialCheckBox>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Refunded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <TextView
                    android:text="The payment for the order is refunded in full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>


                <View
                    android:layout_marginTop="12dp"
                    android:background="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox

                app:buttonTint="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



            </com.google.android.material.checkbox.MaterialCheckBox>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Partially refunded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <TextView
                    android:text="The payment for the order is refunded partially"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>


                <View
                    android:layout_marginTop="12dp"
                    android:background="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>





    </LinearLayout>


</RelativeLayout>